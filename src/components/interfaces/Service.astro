---
import { Car, Croissant, VideoIcon, Volume2 } from "lucide-react";
---

<section class="relative overflow-hidden py-24 md:py-32">
    <div
        class="absolute bottom-auto -z-10 left-auto right-0 top-0 h-[500px] w-[500px] -translate-x-[60%] translate-y-[25%] rounded-full bg-[rgb(235,103,63)] opacity-50 blur-[80px]"
    >
    </div>
    <div class="container mx-auto px-2">
        <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
            <div class="space-y-8">
                <h2
                    class="text-5xl text-balance font-semibold tracking-tight sm:text-7xl"
