---
import RichResults from "./RichResults.astro";

interface Preload {
    as: string;
    href: string;
    type: string;
    rel?: "preload" | "prefetch";
    crossorigin?: string;
}

interface Props {
    title: string;
    description: string;
    preload?: Array<Preload>;
    canonical?: string;
    image?: string;
}

const {
    title,
    description,
    preload,
    canonical,
    image = "https://altos-monardez.vercel.app/metadata.jpg",
} = Astro.props as Props;
---

<title>{title}</title>

<meta charset="UTF-8" />
<meta name="description" content={description} />

{
    preload?.map(({ href, as, type, rel = "preload", crossorigin }) => (
        <link {rel} {href} {as} {type} {crossorigin} />
    ))
}

<link rel="canonical" href={canonical} />
<meta name="viewport" content="width=device-width" />
<meta name="theme-color" content="#27272a" />

<meta
    name="keywords"
    content="matrimonio, eventos, la serena, arriendo de salones, centro de eventos, la serena, arriendo de salones, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena, eventos en la serena, matrimonio en la serena, arriendo de salones en la serena"
/>

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.url)} />

<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="Altos de Monardez" />
<meta property="og:type" content="website" />
<meta property="og:locale" content="es_ES" />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/favicon.svg" />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="msapplication-config" content="/browserconfig.xml" />

