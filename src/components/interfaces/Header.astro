---
import { Phone } from "lucide-react";
import { SheetMenu } from "../sheet-menu";

const routes = [
    { name: "Inicio", href: "/#Inicio" },
    { name: "Quienes somos", href: "/#Quienes-somos" },
    { name: "Servicios", href: "/#Servicio" },
    { name: "Galería", href: "/#Galeria" },
    { name: "Testimonios", href: "/#Testimonios" },
    { name: "Contacto", href: "/#Contacto" },
    { name: "Ubicación", href: "/#Ubicacion" },
];
---

<header class="fixed w-full bg-[#2c2c34] z-50">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
            <div class="md:flex md:items-center md:gap-12">
                <a class="block" href="/">
                    <span class="sr-only">Home</span>

                    <img
                        src="/black-hires.avif"
                        alt="Logo de Oakland Services"
                        class="h-28 w-auto rounded-full object-cover md:block"
                    />
                </a>
            </div>

            <div class="hidden md:block">
                <nav aria-label="Global">
                    <ul class="flex items-center gap-6 text-sm">
                        {
                            routes.map((route) => (
                                <li>
                                    <a class="font-semibold" href={route.href}>
                                        {route.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </nav>
            </div>

            <div class="flex items-center gap-4">
                <div class="sm:flex sm:gap-4">
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md px-5 py-2.5 text-sm font-medium text-white bg-green-600 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-blue-50 transition-colors duration-200 ease-in-out hover:bg-green-700 active:bg-green-800"
                        target="_blank"
                        href="https://api.whatsapp.com/send?phone=56969175107&text=Hola%20quiero%20hacer%20una%20reserva.%20Que%20dias%20tenes%20disponibles%3F"
                    >
                        WhatsApp
                        <Phone className="ml-2 h-4 w-4" />
                    </a>
                </div>

                <div class="block md:hidden">
                    <SheetMenu
                        client:visible
                        routes={routes}
                        title="Altos de Monardez"
                        description="Haz tu consulta en menos de un minuto. Rellena nuestro formulario y recibe una propuesta en menos de 24 horas"
                    />
                </div>
            </div>
        </div>
    </div>
</header>
<style>
    @reference "tailwindcss";
    header {
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
    }

    header {
        @apply bg-blue-50/90 text-black;
    }
    @keyframes nav-shadown {
        0% {
            background-color: transparent;
            color: white;
        }
        to {
            box-shadow:
                0 10px 15px -3px rgba(0, 0, 0, 0.1),
                0 4px 6px -2px rgba(0, 0, 0, 0.05);
            backdrop-filter: blur(10px);
        }
    }
</style>
